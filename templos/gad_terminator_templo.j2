#######################
#  1. CHECK COMMANDS  #
#######################

{% for ldev in data.ldevs %}
	pairdisplay -g {{ data.gad.gad_grp }} -fcxe -d {{ data.ldevs_pfix }}_{{ ldev.ldev_id }}
	raidcom get ldev -ldev_id 0x{{ ldev.ldev_id }} -fx
{% endfor %}

###################
# 2. SUSPEND PAIR #
###################
# *** FRA or RUS ***

{% for ldev in data.ldevs %}
	pairsplit -g {{ data.gad.gad_grp }} -d {{ data.ldevs_pfix }}_{{ ldev.ldev_id }}
{% endfor %}

#####################
# 3. BREAK THE PAIR #
#####################
# *** FRA or RUS ***

{% for ldev in data.ldevs %}
	pairsplit -g {{ data.gad.gad_grp }} -d {{ data.ldevs_pfix }}_{{ ldev.ldev_id }} -S
{% endfor %}

